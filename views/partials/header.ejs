<!-------------This is for Flash message---------------------->
    <div class="container">
        
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert" style = "Font-weight: bold; margin-top: 20px">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-info" role="alert" style = "Font-weight: bold; margin-top: 20px">
                <%= success %>
            </div>
        <% } %>
    </div>
	
	


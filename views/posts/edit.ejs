<% include ../partials/header %> 
<h3 style="text-align: center; margin-bottom: 20px">Edit "<%=post.title%>"</h3>

<form style = "max-width: 600px; width: 90%; margin: 0 auto;" action="/posts/<%=post._id%>?_method=PUT" method="POST">
  <div class="form-group">
      <input type="text" name="post[title]" value="<%=post.title%>" required class="form-control">
  </div>  
  <div class="form-group">
      <input type="text" name="post[subject]" value="<%=post.subject%>?" required class="form-control">
  </div>  
  <div class="form-group">
        <textarea rows="8" class="form-control"  name="post[content]"><%=post.content%></textarea> 
  </div> 

  <div class="form-group">
      <button class="btn btn-primary btn-large form-control">Submit</button>
  </div>

</form>




<% include ../partials/footer %> 
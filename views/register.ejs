<% include ./partials/header %> 
<h2 style="text-align: center; margin-bottom: 20px">Sign Up For Tutor Exchange Account!</h2>

<form style = "max-width: 600px; width: 90%; margin: 0 auto;"action="/register" method="post">
  <div class="form-group">
      <input type="text" name="username" placeholder="enter username" required class="form-control">
  </div>  
  <div class="form-group">
      <input type="password" name="password" class="form-control" placeholder="enter password" required>
  </div>   
  <div class="form-group">
      <input type="password" name="confirmPassword" class="form-control" placeholder="confirm password" required>
  </div>  
  <div class="form-group">
      <input type="email" name="email" placeholder="enter email" required class="form-control">
  </div>  
  <div class="form-group">
      <input type="text" name="fullName" placeholder="Your Full Name" required class="form-control">
  </div>
  <div class="form-group">
      <button class="btn btn-primary btn-large form-control">Sign Up</button>
  </div>

</form>




